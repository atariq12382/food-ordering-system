<body class="vertical  dark  ">
  <div class="wrapper">
    <%= render 'layouts/managerTopNavbar' %>
    <%= render 'layouts/managerSideNavbar' %>
    <main role="main" class="main-content">
      <div class="container-fluid">
        <div class="row justify-content-center">
          <div class="col-12">
            <h2 class="h3 mb-3 page-title">Edit Menu Item: <%= @menu_item.name %></h2>
          </div>
        </div>
      </div>
      <div class="row align-items-center h-100" style="margin-top:5%;">
        <div class="col-lg-3 col-md-4 col-10 mx-auto text-center">
          <%= form_for @menu_item do |f| %>

          <div class="form-group">
            <%= f.label "Name", class: "d-inline" %>
            <%= f.text_field :name, class: "form-control form-control-lg", placeholder: "Name" %>
          </div>
          <div class="form-group mb-3 mt-3">
            <%= f.label "Category", class: "d-inline" %>
            <% options = options_from_collection_for_select(@categories, 'id', 'name') %>
            <%= f.select :category, options, {:selected_value => @menu_item.category.name }, class: "form-control form-control-lg" %>
          </div>
           <div class="form-group">
            <%= f.label "Price", class: "d-inline" %>
            <%= f.text_field :price, class: "form-control form-control-lg", placeholder: "Price" %>
          </div>
           <div class="form-group">
            <%= f.label "status", class: "d-inline" %>
            <%= f.text_field :status, class: "form-control form-control-lg", placeholder: "Status" %>
          </div>
          <div class="form-group mb-3">
            <%= f.label "Image", class: "d-inline" %>
            <% if @menu_item.image.attached? %>
              <%= image_tag @menu_item.image, style: "width: 380px; height: 200px; display: block;" %>
            <% end %>
            <div class="custom-file">
             <%= f.file_field :image, class: "mt-3"%>
            </div>
          </div>
          <%= f.submit "Update", class: "btn btn-lg btn-primary btn-block" %>
          <% end %>
        </div>
      </div>
    </main>
  </div>
  <%= render 'layouts/scriptsAdd' %>
</body>