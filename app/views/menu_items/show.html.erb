<body class="vertical  dark  ">
  <div class="wrapper">
    <%= render 'layouts/managerTopNavbar' %>
    <%= render 'layouts/managerSideNavbar' %>
    <main role="main" class="main-content">
      <div class="container-fluid">
        <div class="row justify-content-center">
          <div class="col-12">
            <h2 class="h3 mb-3 page-title">Menu Item: <%= @menu_item.name %></h2>
          </div>
        </div>
      </div>
      <div class="row align-items-center h-100" style="margin-top:5%;">
        <div class="col-lg-3 col-md-4 col-10 mx-auto text-center">
          <%= form_for @menu_item do |f| %>

          <div class="form-group">
            <%= f.label "Name", class: "d-inline" %>
            <%= f.text_field :name, class: "form-control form-control-lg", placeholder: "Name", readonly: true %>
          </div>
          <div class="form-group mb-3 mt-3">
            <%= f.label "Category ID", class: "d-inline" %>
            <%= f.text_field :category_id, class: "form-control form-control-lg", placeholder: "Name", readonly: true %>
          </div>
           <div class="form-group">
            <%= f.label "Price", class: "d-inline" %>
            <%= f.text_field :price, class: "form-control form-control-lg", placeholder: "Price", readonly: true %>
          </div>
           <div class="form-group">
            <%= f.label "status", class: "d-inline" %>
            <%= f.text_field :status, class: "form-control form-control-lg", placeholder: "Status", readonly: true %>
          </div>
           <div class="form-group mb-3">
            <% if @menu_item.image.attached? %>
              <%= f.label "Image", class: "d-inline" %>
              <%= image_tag @menu_item.image, style: "width: 380px; height: 200px; display: block;" %>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </main>
  </div>
  <%= render 'layouts/scriptsAdd' %>
</body>