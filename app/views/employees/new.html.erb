<body class="vertical dark ">
  <div class="wrapper vh-100">
  <%= render 'layouts/managerTopNavbar' %>
    <%= render 'layouts/managerSideNavbar' %>
    <div class="row align-items-center h-100">
      <div class="col-lg-6 col-md-8 col-10 mx-auto">
        <%= form_tag employees_path, method: :post do%>
          <div class="mx-auto text-center my-4">
            <h2 class="my-3">Register Employee</h2>
          </div>
          <div class="form-group">
            <%= label_tag :email %>
            <%= email_field_tag :email,params[:email], class: 'form-control', autofocus: true, autocomplete: 'email' %>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= label_tag :name %>
              <%= text_field_tag :name,params[:name], autofocus: true, autocomplete: 'name', class: 'form-control' %>
            </div>
            <div class="form-group col-md-6">
              <%= label_tag :cnic %>
            <%= text_field_tag :cnic, params[:cnic], autofocus: true, autocomplete: 'cnic', class: 'form-control' %>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= label_tag :contact %>
              <%= text_field_tag :contact, params[:contact], autofocus: true, autocomplete: 'contact', class: 'form-control' %>
            </div>
            <div class="form-group col-md-6">
              <%= label_tag :address %>
            <%= text_field_tag :address, params[:address], autofocus: true, autocomplete: 'address', class: 'form-control' %>
            </div>
            <div class="form-group col-md-6">
              <%= label_tag :salary %>
            <%= text_field_tag :salary, params[:address], autofocus: true, autocomplete: 'address', class: 'form-control' %>
            </div>
          </div>
          <hr class="my-4">
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="form-group">
                <%= label_tag :password %>
                <%= password_field_tag :password, params[:password], autocomplete: 'current-password', class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= label_tag :password_confirmation %>
                 <%= password_field_tag :password_confirmation, params[:confirmpassword], autocomplete: 'current-password', class: 'form-control' %>
              </div>
            </div>
            <div class="col-md-6">
              <p class="mb-2">Password requirements</p>
              <p class="small text-muted mb-2"> To create a new password, you have to meet all of the following requirements: </p>
              <ul class="small text-muted pl-4 mb-0">
                <li> Minimum 6 character </li>
                <li>At least one special character</li>
                <li>At least one number</li>
                <li>Canâ€™t be the same as a previous password </li>
              </ul>
            </div>
          </div>
          <%= button_tag type: :submit, class: "btn btn-lg btn-primary btn-block" do %>
          Sign Up
          <% end %>
        <% end %>
      </div>
    </div>
      <%= render 'layouts/scriptsAdd' %>
  </div>
</body>

