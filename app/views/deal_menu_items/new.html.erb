<body class="vertical  dark  ">
  <div class="wrapper">
    <%= render 'layouts/managerTopNavbar' %>
    <%= render 'layouts/managerSideNavbar' %>
    <main role="main" class="main-content">
      <div class="container-fluid">
        <div class="row justify-content-center">
          <div class="col-12">
            <h2 class="h3 mb-3 page-title">Add New</h2>
          </div>
        </div>
      </div>
      <div class="row align-items-center h-100" style="margin-top:15%;">
        <div class="col-lg-3 col-md-4 col-10 mx-auto text-center">
          <%= form_tag deal_menu_items_path, method: :post do %>

          <div class="form-group">
            <%= label_tag "Name", nil, class: "d-inline" %>
            <%= text_field_tag :name, params[:name], class: "form-control form-control-lg", placeholder: "Name" %>
          </div>
           <div class="form-group">
            <%= label_tag "status", nil, class: "d-inline" %>
            <%= text_field_tag :status, params[:status], class: "form-control form-control-lg", placeholder: "Status" %>
          </div>
          <%= button_tag type: :submit, class: "btn btn-lg btn-primary btn-block" do %>
          Add Deal Item
          <% end %>
          <% end %>
        </div>
      </div>
    </main>
  </div>
  <%= render 'layouts/scriptsAdd' %>
</body>